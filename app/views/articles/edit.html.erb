<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h1 class="text-center mb-4">Editing Article</h1>

      <%= form_with(model: @article, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :title, class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control', placeholder: "Enter article title" %>
        </div>

        <div class="mb-3">
          <%= form.label :content, class: 'form-label' %>
          <%= form.text_area :content, class: 'form-control', placeholder: "Enter article content", rows: 5 %>
        </div>

         <%= form.submit 'Update Article', class: 'btn btn-success' %>
        <div class="d-flex justify-content-between">
          <%= link_to 'Back', article_path(@article) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
