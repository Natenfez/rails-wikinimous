<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h1 class="text-center">
        <%= @article.title %>
        <div class="btn-group" role="group">
          <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-warning' %>
          <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure you want to delete this article?' }, class: 'btn btn-danger' %>
        </div>
      </h1>
      <p class="text-center"><%= @article.content %></p>
    </div>
  </div>
</div>
